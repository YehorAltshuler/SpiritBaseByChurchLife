---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
const { title } = Astro.props;
---

<html lang="ru">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="SpiritBase — база знаний по духовному наследию." />
    <title>{title}</title>
    <ClientRouter />
  </head>

  <body class="min-h-screen flex flex-col transition-colors duration-300">
    <header class="backdrop-blur bg-surface/80 dark:bg-surface/80 border-b border-border dark:border-border-dark sticky top-0 z-50">
      <nav class="max-w-5xl mx-auto px-6 py-4 flex justify-between items-center">
        <a href="/" class="font-serif text-2xl text-accent">SpiritBase</a>
        <div class="flex items-center gap-4">
          <a href="/about" class="text-sm text-accent hover:underline">О проекте</a>
        </div>
      </nav>
    </header>

    <main class="grow max-w-5xl mx-auto px-6 py-12">
      <slot />
    </main>

    <footer class="text-center py-6 text-sm text-text-secondary dark:text-text-secondary">
      by ChurchLife Development
    </footer>
  </body>
</html>
